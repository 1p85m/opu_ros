<launch>

  <node name = "hot_position_writer"
        type = "relay.py"
        pkg = "opu_ros">
    <param name = "config_file"
           value = "$(find opu_ros)/relay_conf/hot_position_writer.conf" />
  </node>

  <node name = "hot_position_reader"
        type = "relay.py"
        pkg = "opu_ros">
    <param name = "config_file"
           value = "$(find opu_ros)/relay_conf/hot_position_reader.conf" />
  </node>

</launch>
