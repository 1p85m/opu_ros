<launch>

  <node name = "hot_position_simulator"
        type = "hot_position_sim.py"
        pkg = "opust_ros">
  </node>

  <node name = "hot_position_reader"
        type = "relay.py"
        pkg = "opust_ros">
    <param name = "config_file"
           value = "$(file opust_ros)/relay_conf/hot_position_reader.conf">
  </node>

  <node name = "hot_position_writer"
        type = "relay.py"
        pkg = "opust_ros">
    <param name = "config_file"
           value = "$(file opust_ros)/relay_conf/hot_position_writer.conf">
  </node>

</launch>
